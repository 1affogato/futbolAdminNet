<Window x:Class="FutbolAdmin.View.Calendarizacion.CalendarizacionConsulta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendarización Consulta" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Tabla de datos -->
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Eliminar" FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10" Foreground="Black"/>

        <!-- Tabla de clasificación con colores -->
        <DataGrid Grid.Row="1" x:Name="PartidosDataGrid"
                  Background="DarkSlateGray" Foreground="White"
                  RowBackground="LightGreen" AlternatingRowBackground="DarkSeaGreen"
                  BorderBrush="Black" BorderThickness="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
                <DataGridTextColumn Header="Local" Binding="{Binding Local}" Width="*"/>
                <DataGridTextColumn Header="Goles Local" Binding="{Binding GolesLocal}" Width="90"/>
                <DataGridTextColumn Header="Goles Visitante" Binding="{Binding GolesVisitante}" Width="90"/>
                <DataGridTextColumn Header="Visitante" Binding="{Binding Visitante}" Width="*"/>
            </DataGrid.Columns>

            <!-- Estilo de encabezados -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="MediumAquamarine"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Bordes en las celdas -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.CellStyle>

            <!-- Efecto al pasar el mouse sobre una fila -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="LightGreen"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="PaleTurquoise"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Botón redondeado -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,10,0,10">
            <Button Width="140" Height="50">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="30" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                            <TextBlock Text="Regresar" VerticalAlignment="Center" FontSize="20" 
                                                       FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>