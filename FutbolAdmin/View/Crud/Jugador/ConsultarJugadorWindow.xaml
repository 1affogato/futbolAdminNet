<Window x:Class="FutbolAdmin.View.Crud.Jugador.ConsultarJugadorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consultar jugador" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        <StackPanel Margin="10">
            <!-- Título -->
            <TextBlock HorizontalAlignment="Center" Text="Consultar Jugador" FontSize="25" 
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Campo de búsqueda con botón -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <TextBox Width="300" Height="40"
                         BorderBrush="Black" Background="Aquamarine" BorderThickness="1" Padding="5"/>
                <Button Width="120" Height="40" Margin="10,0,0,8">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Green" BorderBrush="Black" CornerRadius="15" Padding="10">
                                            <TextBlock Text="Buscar" HorizontalAlignment="Center" 
                                                       FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Tabla con DataGrid -->
            <DataGrid x:Name="ClasificacionDataGrid" ItemsSource="{Binding Equipos}" AutoGenerateColumns="False"
                      HeadersVisibility="Column" Background="LightGreen" Foreground="Black" Height="200" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Posicion}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="V" Binding="{Binding Victorias}" Width="50"/>
                    <DataGridTextColumn Header="E" Binding="{Binding Empates}" Width="50"/>
                    <DataGridTextColumn Header="D" Binding="{Binding Derrotas}" Width="50"/>
                    <DataGridTextColumn Header="GF" Binding="{Binding GolesFavor}" Width="50"/>
                    <DataGridTextColumn Header="GC" Binding="{Binding GolesContra}" Width="50"/>
                    <DataGridTextColumn Header="DG" Binding="{Binding DiferenciaGoles}" Width="50"/>
                    <DataGridTextColumn Header="Pts" Binding="{Binding Puntos}" Width="50"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botones inferior izquierda y derecha -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Botón de regreso -->
                <Button Grid.Column="0" Width="150" Height="50" HorizontalAlignment="Left"
                        Margin="10, 40, 0, 0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                                <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                                           FontWeight="Bold" Foreground="Black"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Botón centrado en la parte inferior -->
            <Button Width="200" Height="40"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="RoyalBlue" CornerRadius="20" Padding="10">
                                        <TextBlock Text="Continuar" HorizontalAlignment="Center" 
                                                   FontWeight="Bold" Foreground="White"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
