<Window x:Class="FutbolAdmin.View.Crud.Jugador.ventanasSecundarias.EditarJugadorWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Jugador" Height="610" Width="400"
        WindowStartupLocation="CenterOwner" Background="MediumAquamarine">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título con nombre del jugador -->
        <Label Grid.Row="0" Content="{Binding JugadorSeleccionado.Nombre}" 
               FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Formulario de edición -->
        <StackPanel Grid.Row="1">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="6" Height="25" Text="{Binding NombreJugador, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Edad:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding EdadJugador, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Equipo:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" Height="25" ItemsSource="{Binding Equipos}" SelectedItem="{Binding EquipoSeleccionado, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Partidos Jugados:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding PartidosJugados, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Goles:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding Goles, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Asistencias:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding Asistencias, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Tarjetas Amarillas:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding TarjetasAmarillas, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Tarjetas Rojas:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Text="{Binding TarjetasRojas, UpdateSourceTrigger=PropertyChanged}"/>

        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Grid.Column="0" Height="50" HorizontalAlignment="Left"
Margin="10, 20, 0, 0" Click="GuardarButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="  Guardar  " VerticalAlignment="Center" FontSize="16" 
                                   FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button Grid.Column="0" Height="50" HorizontalAlignment="Left"
        Margin="10, 20, 0, 0" Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="20" Height="20"/>
                                            <TextBlock Text="Cancelar" VerticalAlignment="Center" FontSize="16" 
                                           FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>