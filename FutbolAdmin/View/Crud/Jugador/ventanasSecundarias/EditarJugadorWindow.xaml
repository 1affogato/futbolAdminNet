<Window x:Class="FutbolAdmin.View.Crud.Jugador.ventanasSecundarias.EditarJugadorWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Jugador" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título con nombre del jugador -->
        <Label Grid.Row="0" Content="{Binding JugadorSeleccionado.NombreCompleto}" 
               FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Formulario de edición -->
        <StackPanel Grid.Row="1">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="6" Height="25"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Edad:" Margin="5" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Equipo:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>

            <!-- Agrega más campos según necesites -->
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Guardar" Width="100" Height="30" Margin="5"
                    Background="#333333" Foreground="White" FontWeight="Bold"
                    Cursor="Hand" />

            <Button Content="Cancelar" Width="100" Height="30" Margin="5"
                    Background="#333333" Foreground="White" FontWeight="Bold"
                    Cursor="Hand" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>