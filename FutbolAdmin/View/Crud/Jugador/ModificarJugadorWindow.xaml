<Window x:Class="FutbolAdmin.View.Visitantes.ConsultarEquiposWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modificar jugador" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        <StackPanel Margin="10">
            <!-- Título -->
            <TextBlock HorizontalAlignment="Center" Text="Seleccione Jugador" FontSize="25" 
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Campo de búsqueda con botón -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <TextBox Width="300" Height="40"
                         BorderBrush="Black" Background="Aquamarine" BorderThickness="1" Padding="5"/>
                <Button Width="120" Height="40" Margin="10,0,0,8">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Green" BorderBrush="Black" CornerRadius="15" Padding="10">
                                            <TextBlock Text="Buscar" HorizontalAlignment="Center" 
                                                       FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Tabla con DataGrid -->
            <DataGrid x:Name="JugadoresDataGrid" ItemsSource="{Binding Jugadores}" AutoGenerateColumns="False"
                      HeadersVisibility="Column" Height="200" Margin="10"
                      Background="DarkSlateGray" Foreground="White"
                      RowBackground="LightGreen" AlternatingRowBackground="DarkSeaGreen">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="50"/>
                    <DataGridTextColumn Header="Equipo" Binding="{Binding Equipo}" Width="150"/>
                </DataGrid.Columns>

                <!-- Estilo de encabezados -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="MediumAquamarine"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Bordes en las celdas -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>

            <!-- Botón de regreso -->
            <Button Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10, 10, 0 , 0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                            <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                                       FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>