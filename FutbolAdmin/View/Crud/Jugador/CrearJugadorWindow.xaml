<Window x:Class="FutbolAdmin.View.Crud.Jugador.CrearJugadorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Jugador" Height="450" Width="800" Background="MediumAquamarine">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Campos de entrada -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Crear jugador" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White"/>

        <!-- Tabla con campos de texto -->
        <Grid Grid.Row="1" Margin="70,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Encabezados con color -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Margin="5" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Edad:" Margin="5" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Equipo:" Margin="5" VerticalAlignment="Center" Foreground="White"/>

            <!-- Campos de texto con fondo -->
            <TextBox Grid.Row="0" Grid.Column="1" Margin="6" Height="25" Background="LightGreen"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25" Background="LightGreen"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" Height="25" Background="LightGreen"/>
        </Grid>

        <!-- Botón regresar-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10" Width="650">
            <Button Width="140" Height="50">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="30" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="20" Height="30"/>
                                            <TextBlock Text="Regresar" VerticalAlignment="Center" FontSize="20" 
                                                       FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Botón "Crear jugador" -->
            <Button Width="150" Height="50" Margin="300,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Green" CornerRadius="20" Padding="10">
                                        <TextBlock Text="Crear jugador" VerticalAlignment="Center" FontSize="20" 
                                                   FontWeight="Bold" Foreground="Black"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>