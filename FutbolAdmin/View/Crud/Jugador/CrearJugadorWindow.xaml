<Window x:Class="FutbolAdmin.View.Crud.Jugador.CrearJugadorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Crud.Jugador"
        mc:Ignorable="d"
        Title="CrearJugadorWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Crear jugador" 
       FontSize="24" FontWeight="Bold"
       HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Tabla con campos de texto -->
        <Grid Grid.Row="1" Margin="70,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Encabezados -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Edad:" Margin="5" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Equipo:" Margin="5" VerticalAlignment="Center"/>

            <!-- Campos de texto -->
            <TextBox Grid.Row="0" Grid.Column="1" Margin="6" Height="25"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10" Width="650">
            <Button x:Name="BackButton" Content="Regresar" Width="120" Margin="5,0" Background="#aaaaaa" Click="BackButton_Click"/>
            <Button x:Name="CrearJugadorButton" Content="Crear jugador" Width="120" Margin="400,0" Background="#aaaaaa" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
