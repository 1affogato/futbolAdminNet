<Window x:Class="FutbolAdmin.View.Crud.Equipo.AgregarJugadorAEquipo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Visitantes"
        mc:Ignorable="d"
        Title="Consulta de equipos" Height="450" Width="800" Background="MediumAquamarine">

    <!-- Redondear botones -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock HorizontalAlignment="Center" Text="Añadir jugador" FontSize="35" 
                       FontWeight="Bold" Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Botones -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Nuevo Jugador" FontWeight="Bold" Background="SeaGreen" Grid.Row="0" Width="200" Height="50" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20" Click="SeleccionarJugadorButton_Click"/>

            <Button Content="Jugador Existente" FontWeight="Bold" Background="SeaGreen" Grid.Row="1" Width="200" Height="50" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20"/>

            <Button Grid.Row="2" Width="200" Height="50" FontWeight="Bold"  Background="SeaGreen"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20" Click="Button_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- <Image Source="Images/balon.png" Width="24" Height="24" Margin="0,0,10,0"/> -->
                    <TextBlock Text="Regresar" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>

