<Window x:Class="FutbolAdmin.View.Crud.Equipo.AgregarJugadorAEquipo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Visitantes"
        mc:Ignorable="d"
        Title="Consulta de equipos" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
            Background="Transparent">

    <Border CornerRadius="12" BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="/Images/balon.png" Stretch="UniformToFill" />
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A1E" Offset="0" />
                    <!-- Verde oscuro -->
                    <GradientStop Color="#5A8F5A" Offset="0.5"/>
                    <!-- Verde medio -->
                    <GradientStop Color="#1E3A1E" Offset="1"/>
                    <!-- Verde oscuro -->
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#0A1E0A" Offset="0" />
                    <!-- Verde muy oscuro -->
                    <GradientStop Color="#2D5A2D" Offset="0.5"/>
                    <!-- Verde -->
                    <GradientStop Color="#F8F8F8" Offset="1"/>
                    <!-- Blanco -->
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock HorizontalAlignment="Center" Foreground="White" Text="Añadir jugador" FontSize="35" 
                       FontWeight="Bold" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Botones -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Nuevo Jugador" FontWeight="Bold" Background="SeaGreen" Grid.Row="0" Width="200" Height="50" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20" Click="SeleccionarJugadorButton_Click"/>

                    <Button Content="Jugador Existente" FontWeight="Bold" Background="SeaGreen" Grid.Row="1" Width="200" Height="50" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20"/>

                    <Button Grid.Row="2" Width="200" Height="50" FontWeight="Bold"  Background="SeaGreen"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" FontSize="20" Click="Button_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- <Image Source="Images/balon.png" Width="24" Height="24" Margin="0,0,10,0"/> -->
                            <TextBlock Text="Regresar" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>

