<Window x:Class="FutbolAdmin.View.Crud.Equipo.ConsultarEquipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Crud.Equipo"
        mc:Ignorable="d"
        Title="ConsultarEquipoWindow" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Consultar equipo" 
               FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Nombre equipo -->
        <Label Grid.Row="1" Content="{Binding NombreEquipo}"
               FontSize="18" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Estadísticas del equipo -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="20,10" Padding="5">
            <UniformGrid Columns="7">
                <TextBlock Text="V: 32" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="E: 2" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="D: 4" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="GF: 95" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="GC: 23" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="DG: +72" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="Pts: 98" Margin="5" HorizontalAlignment="Center" FontWeight="Bold"/>
            </UniformGrid>
        </Border>

        <!-- Tabla de jugadores -->
        <DataGrid Grid.Row="3" x:Name="JugadoresDataGrid" Margin="20,10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="60"/>
                <DataGridTextColumn Header="G" Binding="{Binding G}" Width="60"/>
                <DataGridTextColumn Header="A" Binding="{Binding A}" Width="60"/>
                <DataGridTextColumn Header="TA" Binding="{Binding TA}" Width="60"/>
                <DataGridTextColumn Header="TR" Binding="{Binding TR}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="60,10">
            <Button x:Name="BackButton" Content="Regresar" Width="120" Margin="5" Background="#aaaaaa"/>
        </StackPanel>
    </Grid>
</Window>
