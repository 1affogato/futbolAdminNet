<Window x:Class="FutbolAdmin.View.Crud.Equipo.EliminarEquipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eliminar equipo" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        <StackPanel Margin="10">
            <!-- Título -->
            <TextBlock HorizontalAlignment="Center" Text="Seleccione Equipo" FontSize="25" 
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Campo de búsqueda con botón -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <TextBox Width="300" Height="40"
                         BorderBrush="Black" Background="Aquamarine" BorderThickness="1" Padding="5"/>
                <Button Width="120" Height="40" Margin="10,0,0,8">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Green" BorderBrush="Black" CornerRadius="15" Padding="10">
                                            <TextBlock Text="Buscar" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                       FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Tabla de equipos con `DataGrid` -->
            <DataGrid x:Name="EquiposDataGrid" ItemsSource="{Binding Equipos}" AutoGenerateColumns="False"
                      HeadersVisibility="Column" Height="200" Margin="10"
                      Background="DarkSlateGray" Foreground="White"
                      RowBackground="LightGreen" AlternatingRowBackground="DarkSeaGreen"
                      BorderBrush="Black" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="60"/>
                    <DataGridTextColumn Header="G" Binding="{Binding G}" Width="60"/>
                    <DataGridTextColumn Header="A" Binding="{Binding A}" Width="60"/>
                    <DataGridTextColumn Header="TA" Binding="{Binding TA}" Width="60"/>
                    <DataGridTextColumn Header="TR" Binding="{Binding TR}" Width="60"/>
                </DataGrid.Columns>

                <!-- Estilo de encabezados -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="MediumAquamarine"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Bordes en las celdas -->
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </Style>
                </DataGrid.CellStyle>

                <!-- Efecto al pasar el mouse sobre una fila -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="LightGreen"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="PaleTurquoise"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <!-- Botón de regreso en la esquina inferior izquierda -->
            <Button Grid.Row="4" Grid.Column="0" Width="150" Height="50" HorizontalAlignment="Left"
                    VerticalAlignment="Bottom" Margin="10, 10, 0, 10" Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="30" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                            <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                                       FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>