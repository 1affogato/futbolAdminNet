<Window x:Class="FutbolAdmin.View.Crud.Equipo.CrearEquipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear equipo" Height="350" Width="400" 
        WindowStartupLocation="CenterScreen"
    Background="Transparent">

    <Border CornerRadius="12" BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="/Images/balon.png" Stretch="UniformToFill" />
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A1E" Offset="0" />
                    <!-- Verde oscuro -->
                    <GradientStop Color="#5A8F5A" Offset="0.5"/>
                    <!-- Verde medio -->
                    <GradientStop Color="#1E3A1E" Offset="1"/>
                    <!-- Verde oscuro -->
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#0A1E0A" Offset="0" />
                    <!-- Verde muy oscuro -->
                    <GradientStop Color="#2D5A2D" Offset="0.5"/>
                    <!-- Verde -->
                    <GradientStop Color="#F8F8F8" Offset="1"/>
                    <!-- Blanco -->
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="10">
                <StackPanel Margin="10">
                    <TextBlock HorizontalAlignment="Center" Foreground="White" Text="Crear equipo" FontSize="25" FontWeight="Bold" Margin="0,0,0,8"/>
                    <!--TexBox Nombre -->
                    <Border>
                        <TextBox x:Name="Nombre"
             Text="Nombre:"
             Background="#77ff77"           
             FontWeight="Medium"
             BorderThickness="1"
             BorderBrush="Black"
             Width="360"
             Height="30"
             VerticalContentAlignment="Center"
             Margin="0,5,0,10"
             Padding="5"/>
                    </Border>

                    <!-- Texto "Jugadores" -->
                    <TextBlock Foreground="White" Text="Jugadores:" FontSize="16" FontWeight="Medium"
               HorizontalAlignment="Left" Margin="0,0,0,1"/>

                    <!-- Tabla de Jugadores -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>

                        </Grid.RowDefinitions>
                        <Border BorderBrush="Black" Background="DarkSlateGray" BorderThickness="0" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Nombre" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="DarkSlateGray" BorderThickness="1" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="Edad" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="LightGreen" BorderThickness="0" Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="LightGreen" BorderThickness="1" Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="0" Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="LightGreen" BorderThickness="0" Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="LightGreen" BorderThickness="1" Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="0" Grid.Row="4" Grid.Column="0">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="4" Grid.Column="1">
                            <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                    </Grid>

                    <Grid>
                        <!-- Definir estructura de filas -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>

                            <!-- Última fila solo para el botón -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Botón Eliminar Jugador -->
                        <Button x:Name="AgregarJugadorButton" Width="150" Height="30" Grid.Row="0" Grid.Column="0" Margin="5">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="LightCoral" CornerRadius="20" Padding="5">
                                                    <TextBlock Text="- Eliminar jugador" HorizontalAlignment="Center" 
                                           FontWeight="Bold" Foreground="Black"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!-- Botón Regresar -->
                        <Button x:Name="EliminarButton" Width="150" Height="30" Grid.Row="1" Grid.Column="0" Margin="5" Click="EliminarButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="SeaGreen" CornerRadius="20" Padding="5">
                                                    <TextBlock Text="Regresar" HorizontalAlignment="Center" 
                                                FontWeight="Bold" Foreground="Black"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!-- Botón Añadir jugador -->
                        <Button x:Name="AnadirButton"  Width="150" Height="30" Grid.Row="0" Grid.Column="1" Margin="45, 0, 0, 0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Gold" CornerRadius="20" Padding="5">
                                                    <TextBlock Text="+ Añadir jugador" HorizontalAlignment="Center" 
                                 FontWeight="Bold" Foreground="Black"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <!-- Botón Crear equipo -->
                        <Button x:Name="CrearEquipoButton" Width="150" Height="30" Grid.Row="1" Grid.Column="1" Margin="45, 0, 0, 0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="LimeGreen" CornerRadius="20" Padding="5">
                                                    <TextBlock Text="Crear equipo" HorizontalAlignment="Center" 
                                 FontWeight="Bold" Foreground="Black"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>

        </Border>
    </Border>
</Window>
