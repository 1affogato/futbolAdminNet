<Window x:Class="FutbolAdmin.View.Crud.Equipo.ModificarEquipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Crud.Equipo"
        mc:Ignorable="d"
        Title="ModificarEquipoWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Modificar equipo" 
           FontSize="28" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Estadísticas del equipo -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="20,10" Padding="5">
            <UniformGrid Columns="7">
                <TextBlock Text="V: 32" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="E: 2" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="D: 4" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="GF: 95" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="GC: 23" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="DG: +72" Margin="5" HorizontalAlignment="Center"/>
                <TextBlock Text="Pts: 98" Margin="5" HorizontalAlignment="Center" FontWeight="Bold"/>
            </UniformGrid>
        </Border>

        <!-- Tabla de jugadores con estilos -->
        <DataGrid Grid.Row="3" x:Name="JugadoresDataGrid" Margin="20,10" AutoGenerateColumns="False"
              HeadersVisibility="Column" Background="DarkSlateGray" Foreground="Black"
              RowBackground="LightGreen" AlternatingRowBackground="DarkSeaGreen"
              BorderBrush="Black" BorderThickness="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="    ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="                                                   Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="60"/>
                <DataGridTextColumn Header="    G" Binding="{Binding G}" Width="60"/>
                <DataGridTextColumn Header="     A" Binding="{Binding A}" Width="60"/>
                <DataGridTextColumn Header="    TA" Binding="{Binding TA}" Width="60"/>
                <DataGridTextColumn Header="     TR" Binding="{Binding TR}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón de regreso en la esquina inferior izquierda -->
        <Button Grid.Row="4" Grid.Column="0" Width="150" Height="50" HorizontalAlignment="Left"
            VerticalAlignment="Bottom" Margin="10, 10, 0, 10" Click="Button_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="SeaGreen" CornerRadius="30" Padding="10">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                        <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                               FontWeight="Bold" Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
