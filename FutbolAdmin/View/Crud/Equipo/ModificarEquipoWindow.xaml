<Window x:Class="FutbolAdmin.View.Crud.Equipo.ModificarEquipoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Crud.Equipo"
        mc:Ignorable="d"
        Title="ModificarEquipoWindow" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
    Background="Transparent">

    <Border CornerRadius="12" BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="/Images/balon.png" Stretch="UniformToFill" />
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.95">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E3A1E" Offset="0" />
                    <!-- Verde oscuro -->
                    <GradientStop Color="#5A8F5A" Offset="0.5"/>
                    <!-- Verde medio -->
                    <GradientStop Color="#1E3A1E" Offset="1"/>
                    <!-- Verde oscuro -->
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#0A1E0A" Offset="0" />
                    <!-- Verde muy oscuro -->
                    <GradientStop Color="#2D5A2D" Offset="0.5"/>
                    <!-- Verde -->
                    <GradientStop Color="#F8F8F8" Offset="1"/>
                    <!-- Blanco -->
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <Label Grid.Row="0" Foreground="White" Content="Modificar equipo" 
           FontSize="28" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,10"/>

                <!-- Estadísticas del equipo -->
                <Border Grid.Row="2" Background="#558855" BorderBrush="Gray" BorderThickness="1" Margin="20,10" Padding="5">
                    <UniformGrid Columns="7">
                        <TextBlock Text="V: 32" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="E: 2" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="D: 4" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="GF: 95" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="GC: 23" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="DG: +72" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pts: 98" Margin="5" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </UniformGrid>
                </Border>

                <!-- Tabla de jugadores con estilos -->
                <DataGrid Grid.Row="3" x:Name="JugadoresDataGrid" Margin="20,10" AutoGenerateColumns="False"
              HeadersVisibility="Column" Background="LightGreen" Foreground="Black"
              RowBackground="LightGreen" AlternatingRowBackground="DarkSeaGreen"
              BorderBrush="Black" BorderThickness="2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="60"/>
                        <DataGridTextColumn Header="G" Binding="{Binding G}" Width="60"/>
                        <DataGridTextColumn Header="A" Binding="{Binding A}" Width="60"/>
                        <DataGridTextColumn Header="TA" Binding="{Binding TA}" Width="60"/>
                        <DataGridTextColumn Header="TR" Binding="{Binding TR}" Width="60"/>
                    </DataGrid.Columns>

                    <!-- Estilo de encabezados -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#447744"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Bordes en las celdas -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <!-- Efecto al pasar el mouse sobre una fila -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="LightGreen"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="PaleTurquoise"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>

                <!-- Botón de regreso en la esquina inferior izquierda -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="60, 10">
                    <Button x:Name="BackButton" Cursor="Hand" Content="Regresar" Width="120" Margin="5" Background="#aaaaaa" Click="Button_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="SeaGreen" CornerRadius="20" Padding="7">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Images/flechaAtras.png" Margin="6 0 0 0" Width="20" Height="16"/>
                                                    <TextBlock Text=" Regresar" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
