<Window x:Class="FutbolAdmin.View.Crud.CatalogosCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Crud"
        mc:Ignorable="d"
        Title="CatalogosCrudWindow" Height="400" Width="400" Background="MediumAquamarine">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titulo -->
        <Label Grid.Row="0" Content="Catálogos" 
           FontSize="28" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,40"
           Foreground="#333333"/>

        <!-- Botones principales -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <!-- Boton gestionar equipo -->
            <Button Content="Gestionar equipo" x:Name="GestionarEquipoButton"
                Width="250" Height="60" Margin="0,0,0,20"
                FontSize="18"
                Background="#333333" Foreground="White"
                BorderThickness="0" Cursor="Hand" Click="GestionarEquipoButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="LightGreen" CornerRadius="20" Padding="0">
                                        <TextBlock Text="Gestionar Equipos" HorizontalAlignment="Center"  VerticalAlignment="Center"
            FontWeight="Bold" Foreground="Black"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Boton gestionar jugadores -->
            <Button Content="Gestionar jugadores" x:Name="GestionarJugadoresButton"
                Width="250" Height="60" Margin="0,0,0,20"
                FontSize="18"
                Background="#333333" Foreground="White"
                BorderThickness="0" Cursor="Hand" Click="GestionarJugadoresButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="LimeGreen" CornerRadius="20" Padding="0">
                                        <TextBlock Text="Gestionar Jugadores" HorizontalAlignment="Center"  VerticalAlignment="Center"
            FontWeight="Bold" Foreground="Black"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="BackButton" Content="Regresar" Width="120" Margin="5"  Background="#aaaaaa" Click="BackButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="20" Padding="7">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="20" Height="20"/>
                                            <TextBlock Text="    Regresar" VerticalAlignment="Center" FontSize="14" 
                FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
