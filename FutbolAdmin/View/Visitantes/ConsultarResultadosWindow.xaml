<Window x:Class="FutbolAdmin.View.Visitantes.ConsultarResultadosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Visitantes"
        mc:Ignorable="d"
        Title="ConsultarResultadosWindow" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Partidos" 
               FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Tabla de clasificación -->
        <DataGrid Grid.Row="1" x:Name="PartidosDataGrid" ItemsSource="{Binding Partidos}" 
                  Background="LightGreen" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaString}" Width="*"/>
                <DataGridTextColumn Header="Local" Binding="{Binding EquipoLocal.Nombre}" Width="*"/>
                <DataGridTextColumn Header="Goles Local" Binding="{Binding GolesLocal}" Width="90"/>
                <DataGridTextColumn Header="Goles Visitante" Binding="{Binding GolesVisitante}" Width="90"/>
                <DataGridTextColumn Header="Visitante" Binding="{Binding EquipoVisitante.Nombre}" Width="*"/>
            </DataGrid.Columns>
            
            <!-- Estilo de encabezados -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="MediumAquamarine"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <!-- Botón de regreso en la esquina inferior izquierda -->
        <Button x:Name="BackButton"  Grid.Row="2" Grid.Column="0" Width="150" Height="50" HorizontalAlignment="Left"
                Margin="10, 10, 0, 10" Click="BackButton_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                        <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                                   FontWeight="Bold" Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>