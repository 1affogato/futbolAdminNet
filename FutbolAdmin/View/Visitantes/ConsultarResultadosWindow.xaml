<Window x:Class="FutbolAdmin.View.Visitantes.ConsultarResultadosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Visitantes"
        mc:Ignorable="d"
        Title="ConsultarResultadosWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Partidos" 
               FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Tabla de clasificación -->
        <DataGrid Grid.Row="1" x:Name="PartidosDataGrid" ItemsSource="{Binding Partidos}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha.Date}" Width="*"/>
                <DataGridTextColumn Header="Local" Binding="{Binding EquipoLocal.Nombre}" Width="*"/>
                <DataGridTextColumn Header="Goles Local" Binding="{Binding GolesLocal}" Width="90"/>
                <DataGridTextColumn Header="Goles Visitante" Binding="{Binding GolesVisitante}" Width="90"/>
                <DataGridTextColumn Header="Visitante" Binding="{Binding EquipoVisitante.Nombre}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="60,10">
            <Button x:Name="BackButton" Content="Regresar" Width="120" Margin="5" Background="#aaaaaa" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
