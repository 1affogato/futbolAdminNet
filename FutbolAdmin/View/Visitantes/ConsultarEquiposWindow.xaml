<Window x:Class="FutbolAdmin.View.Visitantes.ConsultarEquiposWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.Visitantes"
        mc:Ignorable="d"
        Title="Consulta de equipos" Height="450" Width="800" Background="MediumAquamarine">
    <Grid>
        
        <StackPanel Margin="10">
            <TextBlock HorizontalAlignment="Center" Text="{Binding NombreEquipo}" FontSize="25" 
                       FontWeight="Bold" Margin="0,0,0,8"/>

            <!-- Tabla de estadísticas generales -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>

                </Grid.RowDefinitions>
                <Border BorderBrush="Black" Background="LimeGreen" BorderThickness="1" Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="{Binding VictoriasText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="Gold" BorderThickness="1" Grid.Row="0" Grid.Column="1">
                    <TextBlock Text="{Binding EmpatesText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="Crimson" BorderThickness="1" Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="{Binding DerrotasText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="0" Grid.Column="3">
                    <TextBlock Text="{Binding GolesFavorText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="0" Grid.Column="4">
                    <TextBlock Text="{Binding GolesContraText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="0" Grid.Column="5">
                    <TextBlock Text="{Binding EmpatesText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Black" Background="DarkSeaGreen" BorderThickness="1" Grid.Row="0" Grid.Column="6">
                    <TextBlock Text="{Binding PuntosText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>


            </Grid>
            <!-- Espacio entre filas -->
            <StackPanel Orientation="Vertical" Margin="8">
            </StackPanel>

            <!-- Tabla de equipos -->
            <Grid>
                <DataGrid Grid.Row="1" x:Name="ClasificacionDataGrid" ItemsSource="{Binding Jugadores}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id_Jugador}" Width="*"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="*"/>
                        <DataGridTextColumn Header="PJ" Binding="{Binding PartidosJugados}" Width="*"/>
                        <DataGridTextColumn Header="G" Binding="{Binding Goles}" Width="*"/>
                        <DataGridTextColumn Header="A" Binding="{Binding Asistencias}" Width="*"/>
                        <DataGridTextColumn Header="TA" Binding="{Binding TarjetasRojas}" Width="*"/>
                        <DataGridTextColumn Header="TR" Binding="{Binding TarjetasAmarillas}" Width="*"/>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <!-- Estilo para las filas -->
                        <Style TargetType="RowDefinition"></Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Grid>

            <!-- Botón de regreso -->
            <Button Width="150" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="SeaGreen" CornerRadius="20" Padding="10">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/flechaAtras.png" Width="30" Height="30"/>
                                            <TextBlock Text="  Regresar" VerticalAlignment="Center" FontSize="20" 
                                                       FontWeight="Bold" Foreground="Black"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
