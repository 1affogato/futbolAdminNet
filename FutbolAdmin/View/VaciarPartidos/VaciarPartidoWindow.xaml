<Window x:Class="FutbolAdmin.View.VaciarPartidos.VaciarPartidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FutbolAdmin.View.VaciarPartidos"
        mc:Ignorable="d"
        Title="VaciarPartidoWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="244.797"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Vaciar partido" 
       FontSize="28" FontWeight="Bold" 
       HorizontalAlignment="Center" Margin="0,10,0,10" Width="194"/>

        <!-- Tabla de evento -->
        <DataGrid x:Name="EventosDataGrid" Margin="200,67,200,10" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Evento" Binding="{Binding Evento}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Tabla de eventos añadidos -->
        <DataGrid Grid.Row="2" x:Name="EventosAnadidosDatagrid" Margin="157,22,157,81">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Eventos Añadidos" Binding="{Binding EventoAnadido}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    
        
        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,205,0,10" Width="668">
            <Button Margin="50, 0" x:Name="BackButton" Content="Regresar" Width="120" Background="#aaaaaa" Height="21" Click="BackButton_Click"/>
            <Button Margin="50, 0" x:Name="AgregarEventoButton" Content="Agregar Evento" Width="120" Background="#aaaaaa" Height="21"/>
            <Button Margin="50, 0" x:Name="TerminarButton" Content="Terminar" Width="120" Background="#aaaaaa" Height="21"/>
        </StackPanel>
    </Grid>
</Window>
