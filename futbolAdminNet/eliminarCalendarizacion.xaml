<Window x:Class="futbolAdminNet.eliminarCalendarizacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:futbolAdminNet"
        mc:Ignorable="d"
        Title="Principal" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White"
        SizeToContent="Height"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontFamily" Value="Arial"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Grid.Row="0" Content="Eliminar" 
               FontSize="28" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,10"/>

        <!-- Tabla de clasificación -->
        <DataGrid Grid.Row="1" Background="LightGray" x:Name="ClasificacionDataGrid" SelectionChanged="ClasificacionDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Posicion}"  Width="*"/>
                <DataGridTextColumn Header="Jornada" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Local" Binding="{Binding Victorias}" Width="*"/>
                <DataGridTextColumn Header="VIsitante" Binding="{Binding Empates}" Width="*"/>
                <DataGridTextColumn Header="Goles local" Binding="{Binding Derrotas}" Width="*"/>
                <DataGridTextColumn Header="Goles visitante" Binding="{Binding GolesFavor}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="AdminButton" Content="Regresar" Width="120"  Background="#aaaaaa" />
        </StackPanel>
    </Grid>
</Window>
